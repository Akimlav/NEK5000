forces
{
    type          forces;

    libs          ("libforces.so");

    writeControl  timeStep;
    timeInterval  1;

    log           yes;

    patches       (prop_blades);
    rho           rhoInf;     // Indicates incompressible
    log           true;
    rhoInf        1000;          // Redundant for incompressible

    CofR          (-0.109682 0.000 0.160673);    // Rotation around centre line of propeller
    pitchAxis     (0.463032 0.000 0.032378);
}


